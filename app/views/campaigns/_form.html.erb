<div class="well transparent" >
  <div class="row">

  <div class="col-md-1"></div>
  <div class="col-md-1"></div>
    <div class="col-md-8 navbar-nav" style="font-size: 1em;">
    <%= form_for(@campaign, html: { multipart: true }) do |f| %>
      <% if @campaign.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@campaign.errors.count, "error") %> prohibited this campaign from being saved:</h2>

          <ul>
          <% @campaign.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :name, "Artist" %><br>
        <%= f.text_field :name, class: 'form-control', placeholder: "e.g Taylor Swift..." %>
      </div>

      <div class="field">
        <%= f.label :goalMoney, 'Goal' %> (The total cost of the desired act)
        <%= f.number_field :goalMoney, min: 1, class: 'form-control', placeholder: "$..."%>
      </div>
      <div class="field">
        <%= f.label :clubMoney, 'Club Funds' %> (The amount your club already has in its fund for the act)
        <%= f.number_field :clubMoney, min: 1, class: 'form-control' , placeholder: "$..."%>
      </div>
      <div class="field">
        <%= f.label :start_date, 'Campaign Start Date' %><br>
        <%= f.date_select :start_date, class: 'form-control' %>
      </div>
      <div class="field">
        <%= f.label :end_date, 'Campaign End Date' %><br>
        <%= f.date_select :end_date, class: 'form-control' %>
      </div>
      <div class="picture">
        <%= f.label :picture %><br>
        <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
      </div>
      <br>
      <div class="field">
        <%= f.label :description %><br>
        <%= f.text_area :description, class: 'form-control' %>
      </div>
      <div class="actions">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    <% end %>

    <script type="text/javascript">
      $('#campaign_picture').bind('change', function() {
        size_in_megabytes = this.files[0].size/1024/1024;
        if (size_in_megabytes > 5) {
          alert('Maximum file size is 5MB. Please choose a smaller file.');
        }
      });
    </script>
    </div> 
  </div> 
  <div class="col-md-1"></div>
  <div class="col-md-1"></div>
</div>
